doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    title Login Blog Application
    script(src='https://s.codepen.io/assets/libs/modernizr.js', type='text/javascript')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css')
    link(rel='stylesheet', href='css/style.css')
  body
    .log-form
      h2 Sign up
      form(action='/createuser', method='POST' autocomplete='off')
        input(type='email', name='email', placeholder='Email')
        input(type='text', name='username', placeholder='Username')
        input(type='password', name='password', placeholder='New Password')
        input(type='password', name='password2', placeholder='New Password')
        button.btn(type='submit') Login
        a.forgot(href='/') Already have an account?
    // end log form
    script(src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js')
